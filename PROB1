//Problem 1
#include<iostream>
#include<conio.h>

using namespace std;

int main()
{

	char P;
	int h, b;
	cout << "Package A: 995 per month for 10 hours. P20/hour for succeeding hours." << endl;
	cout << "Package B: 1495 per month for 20 hours. P10/hour for succeeding hours." << endl;
	cout << "Package C: 1995 per month, unlimited access are provided." << endl;
	cout<<"Enter the letter of your Package: (EX. A/a) " << endl;
	cin>>P;
	cout<<"Enter number of Hours: " << endl;
	cin>>h;

	switch(P){
		case 'A':
		case 'a':
			b = 995;
			if(h > 10){
				b = b + (h - 10 ) * 20;
			}
			break;
		case 'B':
		case 'b':
			b = 1495;
			if(h > 20){
				b = b + (h - 20 ) * 10;
			} 	 	
			break;
		case 'C':
		case 'c':
			b = 1995;
			break;
		default:
			cout<<"Invalid!";
	}
	
	cout<<"Your total amount due this month is: "<< b << endl;
	cout<<"THANK YOU! " << endl;
	_getch();
	return 0;
	
}
